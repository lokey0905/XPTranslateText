<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="source_lang"
        android:title="@string/source_language_title"
        android:summary="@string/source_language_summary"
        android:defaultValue="auto"
        android:dialogTitle="@string/source_language_dialog_title"
        android:singleLine="true" />

    <EditTextPreference
        android:key="target_lang"
        android:title="@string/target_language_title"
        android:summary="@string/target_language_summary"
        android:defaultValue="zh-TW"
        android:dialogTitle="@string/target_language_dialog_title"
        android:singleLine="true" />
</PreferenceScreen>